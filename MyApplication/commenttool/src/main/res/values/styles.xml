<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CommonWhiteColorButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/common_btn_text_orange</item>
        <item name="android:background">@drawable/common_btn_bg_white</item>
        <item name="android:maxHeight">@dimen/common_btn_height</item>
        <item name="android:gravity">center</item>
    </style>

    <dimen name="common_btn_height">35dp</dimen>
</resources>
